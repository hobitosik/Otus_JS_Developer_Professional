{
	"compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "dist",
	},
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
